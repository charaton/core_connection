<ul>
  <% @education.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_for [current_user_profile, @education] do |f| %>
  <div class="form-group">
    <%= f.label :school %>
    <%= f.text_field :school, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :degree %>
    <%= f.text_field :degree, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :school_url %>
    <%= f.text_field :school_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :image %>
    <%= f.file_field :image, class: "form-control" %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
