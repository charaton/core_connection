<ul>
  <% @education.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>

<%= form_with model: [@profile, @education], local: true, html: { multiple: true } do |form| %>
  <div class="form-group">
    <%= form.label :school %>
    <%= form.text_field :school, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :degree %>
    <%= form.text_field :degree, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :school_url, "School Website" %>
    <%= form.text_field :school_url, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <small>JPG, JPEG, GIF, PNG only.</small>
  </div>

  <%= form.submit "Submit", class: "btn btn-primary" %>
<% end %>
