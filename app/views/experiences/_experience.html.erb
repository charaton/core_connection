<div class="row">
  <div class="col-sm-9">
    <% if experience.image.attached? %>
      <p class="logo-thumb">
        <%= image_tag experience.image.variant(resize_to_limit: [150, 150]) %>
      </p>
    <% end %>

    <h3>
      <%= experience.job_title %>
      at
      <%= link_to experience.company_name,
                  experience.company_url,
                  target: "_blank" %>
    </h3>

    <p>
      From: <%= experience.from_date %>
      to: <%= experience.to_date %>
    </p>

    <p><%= experience.description %></p>
  </div>

  <div class="col-sm-3 text-right">
    <p class="profile-actions">
    <% if can? :manage, profile %>
      <%= link_to "Edit",
                  edit_profile_experience_path(profile, experience),
                  class: "btn btn-warning" %>
      <%= link_to "Delete",
                  profile_experience_path(profile, experience),
                  method: :delete,
                  data: {confirm: "Are you sure?"},
                  class: "btn btn-primary" %>
    <% end %>
    </p>
  </div>
</div>
