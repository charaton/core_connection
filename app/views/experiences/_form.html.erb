<% if @experience.errors.any? %>
<ul>
  <% @experience.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
</ul>
<% end %>

<%= form_with model: [@profile, @experience], html: { multiple: true } do |form| %>
  <div class="form-group">
    <%= form.label :job_title %>
    <%= form.text_field :job_title, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :company_name %>
    <%= form.text_field :company_name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :company_url, "Company Website" %>
    <%= form.text_field :company_url, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :from_date %>
    <%= form.date_field :from_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :to_date %>
    <%= form.date_field :to_date, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :image %>
    <%= form.file_field :image %>
    <small>JPG, JPEG, GIF, PNG only.</small>
  </div>
  <%= form.submit nil, class: "btn btn-primary" %>
<% end %>
