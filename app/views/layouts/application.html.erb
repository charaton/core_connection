          <article class="col-md-6 cc-footer">
            <a href="http://www.pctia.bc.ca/listings/accredited" target="_blank">
              <%= image_tag("PCTIA-accredited-Logo-eda396310730f5835bca463b2ebd5494.JPG", class: "pctia" ) %>
            </a>
          </article>
        </div>
      </section>
    </section>
  </footer>
</body>
</html>
