<h1>Welcome to CoreConnection!</h1>
<div id="home-buttons">
  <div class="col-sm-6 text-center">
    <%= link_to "Available Students", root_path %>
  </div>
  <div class="col-sm-6 text-center">
    <%= link_to "All Students", root_path %>
  </div>
</div>
<div id="profiles">
 <% @profiles.each do |profile| %>
  <div class="col-xs-12 col-sm-6 col-md-3">
    <p><%= image_tag profile.photo.url %></p>
    <p><%= profile.tagline %></p>
    <p> <%= link_to "View Profile", profile_path(profile) %></p>
  </div>
 <% end %>
</div>
