<div class="col-sm-12">
  <% @profile.projects.each do |project| %>
    <div class="row">
      <div class="col-sm-9">
        <h3><%= project.title %></h3>
        <p><%= project.description %></p>
      </div>
      <div class="col-sm-3 text-right">
        <p><%= link_to "View Project", project.project_url, target: "_blank", class: "btn btn-info" %></p>
        <p><%= link_to "View GitHub", project.github_url, target: "_blank", class: "btn btn-info" %></p>
        <% if can? :manage, @profile %>
          <%= link_to "Edit", edit_profile_project_path(@profile, project), class: "btn btn-warning" %>
          <%= link_to "Delete", profile_project_path(@profile, project), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
    <hr>
  <% end %>
</div>
