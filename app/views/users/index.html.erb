<h1 style="text-align: center">Welcome to the Admin Control Panel!</h1>

<div id="pending_users" class="col-sm-6">
  <h2>Pending Users</h2>
  <div class="container-fluid">
    <% @pending_users.each do |user| %>
      <div id="<%= dom_id(user) %>" class="row">
        <div class="col-sm-6">
          <p><%= full_name user %><br><%= user.email %></p>
        </div>
        <div class="col-sm-6 text-right">
          <%= link_to "Approve", user_path(id: user, user: {status: true}), method: :patch, class: "btn btn-success"  %>
          <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{full_name user}?"}, class: "btn btn-primary" %>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>

<div id="approved_users" class="col-sm-6">
  <h2>Approved Users</h2>
  <div class="container-fluid">
    <% @approved_users.each do |user| %>
      <div id="<%= dom_id(user) %>" class="row">
        <div class="col-sm-6">
          <p><%= full_name user %><br><%= user.email %></p>
        </div>
        <div class="col-sm-6 text-right">
          <%= link_to "Delete", user_path(user), method: :delete, data: {confirm: "Are you sure you want to delete #{full_name user}?"}, class: "btn btn-primary" %>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>
